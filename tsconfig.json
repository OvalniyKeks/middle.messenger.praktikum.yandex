{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "isolatedModules": false,
    "typeRoots" : ["src/typings"]
  },
  "ts-node": { "files": true },
  "exclude": [
    "node_modules",
    ".parcel-cache",
    "src/assets"
  ]
}
